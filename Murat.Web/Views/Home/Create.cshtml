@model Murat.API.ResponseModels.ProductResponseModel

<html>
<body>
@{
    if (TempData["errorMessage"] != null)
    {
        <p style="color: red"> @TempData["errorMessage"]</p>
    }
}
<form asp-action="Create" asp-controller="Home" method="post">
    <label>Product Name:</label>
    <input type="text" asp-for="@Model.Name"/>
    <br/>
    <hr/>
    <label>Product Price:</label>
    <input asp-for="@Model.Price"/>
    <br/>
    <hr/>
    <label>Stock:</label>
    <input asp-for="@Model.Stock"/>
    <br/>
    <hr/>

    <div>
        <a asp-action="Index" asp-controller="Home">Return Index</a>
        <button type="submit">Submit</button>
    </div>
</form>
</body>
</html>